<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stytch.sdk.example">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StytchSDKExamples">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DropInActivity required to handle your scheme & host -->

        <!-- Activity launchMode="singleTask" required to handle results with same listener -->

        <activity android:name="com.stytch.sdk.ui.StytchMainActivity"
            android:theme="@style/Theme.StytchTheme"
            android:launchMode="singleTask">

            <!-- Label that user see in settings -->
            <intent-filter android:label="stytch_sdk_deep_link">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Scheme & host from configuration-->
                <data android:scheme="https"
                    android:host="test.stytch.com" />
            </intent-filter>
        </activity>

    </application>

</manifest>