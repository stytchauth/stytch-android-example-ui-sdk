<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/email_auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_with_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="12dp"
        />

    <Button
        android:id="@+id/sms_auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_with_sms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_auth_button"
        android:layout_margin="12dp"
        />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sms_auth_button"
        android:layout_margin="12dp"
        android:paddingHorizontal="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
